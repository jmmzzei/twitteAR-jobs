    "postcss-discard-comments": "^4.0.2",
    "request": "^2.88.0",
    "timeago.js": "^4.0.0-beta.2"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "cssnano": "^4.1.10",
    "dotenv": "^8.2.0",
