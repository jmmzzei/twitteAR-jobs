  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run clear && npm run css -w && npm run js:minify -w && nodemon -r dotenv/config index -w",
    "dev": "nodemon -r dotenv/config index",
    "clear": "rimraf ./dist/css/* && rimraf ./dist/js/*",
    "start": "node index",
    "js:minify": "cd ./src/js/ && terser main.js --output ./../../dist/js/main.js",
    "css": "cd ./src/css/ && postcss *.css --use autoprefixer -d ./../../dist/css/ && npm run css:minify",
    "css:minify": "cd ./dist/css/ && postcss *.css -r --verbose"
  },
